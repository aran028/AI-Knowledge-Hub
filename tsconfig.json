{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/domain": [
        "./src/domain"
      ],
      "@/domain/*": [
        "./src/domain/*"
      ],
      "@/components": [
        "./src/presentation/components"
      ],
      "@/components/*": [
        "./src/presentation/components/*"
      ],
      "@/hooks": [
        "./src/presentation/hooks"
      ],
      "@/hooks/*": [
        "./src/presentation/hooks/*"
      ],
      "@/shared": [
        "./src/shared"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/lib/*": [
        "./src/shared/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
